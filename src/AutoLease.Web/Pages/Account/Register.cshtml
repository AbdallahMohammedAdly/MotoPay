@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@model AutoLease.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = Localizer["Register"];
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">@Localizer["CreateYourAccount"]</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Input.FirstName" class="form-label"></label>
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Input.LastName" class="form-label"></label>
                                <input asp-for="Input.LastName" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Input.Role" class="form-label"></label>
                        <select asp-for="Input.Role" class="form-select">
                            <option value="">@Localizer["SelectYourRole"]</option>
                            <option value="Client">@Localizer["RoleClientOption"]</option>
                            <option value="SalesAgent">@Localizer["RoleSalesAgentOption"]</option>
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                        <div class="form-text">
                            <strong>@Localizer["Client"]:</strong> @Localizer["ClientDesc"]<br/>
                            <strong>@Localizer["SalesAgent"]:</strong> @Localizer["SalesAgentDesc"]
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">@Localizer["CreateAccount"]</button>
                </form>
                
                <hr />
                
                <div class="text-center">
                    <p>@Localizer["AlreadyHaveAccount"] <a asp-page="./Login">@Localizer["SignInHere"]</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}