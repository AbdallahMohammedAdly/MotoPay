@page
@model AutoLease.Web.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = "Profile";
}

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Account Management</h5>
            </div>
            <div class="list-group list-group-flush">
                <a asp-page="./Index" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user"></i> Profile
                </a>
                <a asp-page="./ChangePassword" class="list-group-item list-group-item-action">
                    <i class="fas fa-lock"></i> Change Password
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-edit"></i> Profile Information
                </h4>
            </div>
            <div class="card-body">
                @if (TempData["StatusMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["StatusMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.FirstName" class="form-label">
                                <i class="fas fa-user"></i> First Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.LastName" class="form-label">
                                <i class="fas fa-user"></i> Last Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input asp-for="Input.Email" class="form-control" readonly />
                        <div class="form-text">
                            Email address cannot be changed. Contact support if you need to update your email.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-user-tag"></i> Account Type
                        </label>
                        <input type="text" class="form-control" value="@Model.UserRole" readonly />
                        <div class="form-text">
                            Your account type determines your access level within the system.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-calendar-plus"></i> Member Since
                        </label>
                        <input type="text" class="form-control" value="@Model.MemberSince.ToString("MMMM dd, yyyy")" readonly />
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-page="/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Profile
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Account Statistics -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar"></i> Account Statistics
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    @if (User.IsInRole("Client"))
                    {
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-primary">@Model.TotalApplications</h3>
                                <p class="text-muted">Applications Submitted</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-success">@Model.ApprovedApplications</h3>
                                <p class="text-muted">Approved Applications</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-info">@Model.CarsOwned</h3>
                                <p class="text-muted">Cars Currently Owned</p>
                            </div>
                        </div>
                    }
                    else if (User.IsInRole("SalesAgent"))
                    {
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-primary">@Model.CarsManaged</h3>
                                <p class="text-muted">Cars Managed</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-success">@Model.OffersCreated</h3>
                                <p class="text-muted">Offers Created</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-info">@Model.TotalSales</h3>
                                <p class="text-muted">Total Sales</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .stat-item {
        padding: 1rem;
        border-radius: 0.375rem;
        background-color: #f8f9fa;
        margin-bottom: 1rem;
    }
    
    .stat-item h3 {
        margin-bottom: 0.5rem;
        font-weight: bold;
    }
    
    .list-group-item.active {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
</style>