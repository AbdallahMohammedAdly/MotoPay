@page
@model AutoLease.Web.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = "ChangePassword";
}

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Account Management</h5>
            </div>
            <div class="list-group list-group-flush">
                <a asp-page="./Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-user"></i> Profile
                </a>
                <a asp-page="./ChangePassword" class="list-group-item list-group-item-action active">
                    <i class="fas fa-lock"></i> Change Password
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-key"></i> Change Password
                </h4>
            </div>
            <div class="card-body">
                @if (TempData["StatusMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["StatusMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.OldPassword" class="form-label">
                            <i class="fas fa-lock"></i> Current Password <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Input.OldPassword" class="form-control" type="password" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.NewPassword" class="form-label">
                            <i class="fas fa-key"></i> New Password <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Input.NewPassword" class="form-control" type="password" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        <div class="form-text">
                            Password must be at least 6 characters long and contain uppercase, lowercase, and numbers.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">
                            <i class="fas fa-check"></i> Confirm New Password <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Profile
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Security Tips -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-shield-alt"></i> Password Security Tips
                </h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Use at least 6 characters
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Include uppercase and lowercase letters
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Include at least one number
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Avoid using personal information
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Don't reuse passwords from other accounts
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}