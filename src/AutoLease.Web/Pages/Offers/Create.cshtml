@page
@model AutoLease.Web.Pages.Offers.CreateModel
@{
    ViewData["Title"] = "Create Special Offer";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-plus-circle"></i> Create Special Offer
                </h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.Title" class="form-label">Offer Title</label>
                                <input asp-for="Input.Title" class="form-control" placeholder="e.g., Summer Sale Special" />
                                <span asp-validation-for="Input.Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.CarId" class="form-label">Select Car</label>
                                <select asp-for="Input.CarId" class="form-select">
                                    <option value="">Choose a car...</option>
                                    @foreach (var car in Model.AvailableCars)
                                    {
                                        <option value="@car.Id">@car.DisplayName - @car.Price.ToString("C")</option>
                                    }
                                </select>
                                <span asp-validation-for="Input.CarId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Description</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3" 
                                placeholder="Describe this special offer..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Input.OriginalPrice" class="form-label">Original Price</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Input.OriginalPrice" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="Input.OriginalPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Input.DiscountedPrice" class="form-label">Discounted Price</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Input.DiscountedPrice" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="Input.DiscountedPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Savings</label>
                                <div class="form-control bg-light" id="savingsDisplay">$0.00</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.StartDate" class="form-label">Start Date</label>
                                <input asp-for="Input.StartDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.EndDate" class="form-label">End Date</label>
                                <input asp-for="Input.EndDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="Input.EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.MaxApplications" class="form-label">Maximum Applications</label>
                                <input asp-for="Input.MaxApplications" class="form-control" type="number" min="1" max="1000" />
                                <span asp-validation-for="Input.MaxApplications" class="text-danger"></span>
                                <div class="form-text">Maximum number of people who can apply for this offer</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.SalesAgentId" class="form-label">Assign Sales Agent (Optional)</label>
                                <select asp-for="Input.SalesAgentId" class="form-select">
                                    <option value="">No specific agent</option>
                                    @foreach (var agent in Model.SalesAgents)
                                    {
                                        <option value="@agent.Id">@agent.FullName (@agent.Department)</option>
                                    }
                                </select>
                                <span asp-validation-for="Input.SalesAgentId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Terms" class="form-label">Terms and Conditions</label>
                        <textarea asp-for="Input.Terms" class="form-control" rows="4" 
                                placeholder="Enter the terms and conditions for this offer..."></textarea>
                        <span asp-validation-for="Input.Terms" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Create Offer
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Back to Offers
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-lightbulb"></i> Offer Tips
                </h5>
            </div>
            <div class="card-body">
                <h6>Creating Great Offers</h6>
                <ul class="small">
                    <li>Use compelling titles that highlight the benefit</li>
                    <li>Set realistic discount amounts</li>
                    <li>Choose appropriate time frames</li>
                    <li>Limit applications to create urgency</li>
                    <li>Be clear about terms and conditions</li>
                </ul>
                
                <h6 class="mt-3">Best Practices</h6>
                <ul class="small">
                    <li>Offers should run for 7-30 days</li>
                    <li>Discounts of 10-25% work well</li>
                    <li>Limit to 10-50 applications</li>
                    <li>Include clear eligibility criteria</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const originalPriceInput = document.getElementById('Input_OriginalPrice');
            const discountedPriceInput = document.getElementById('Input_DiscountedPrice');
            const savingsDisplay = document.getElementById('savingsDisplay');
            
            function updateSavings() {
                const original = parseFloat(originalPriceInput.value) || 0;
                const discounted = parseFloat(discountedPriceInput.value) || 0;
                const savings = original - discounted;
                
                if (savings >= 0) {
                    savingsDisplay.textContent = '$' + savings.toFixed(2);
                    savingsDisplay.className = 'form-control bg-success text-white';
                } else {
                    savingsDisplay.textContent = 'Invalid prices';
                    savingsDisplay.className = 'form-control bg-danger text-white';
                }
            }
            
            originalPriceInput.addEventListener('input', updateSavings);
            discountedPriceInput.addEventListener('input', updateSavings);
            
            // Set default dates
            const now = new Date();
            const tomorrow = new Date(now.getTime() + 24 * 60 * 60 * 1000);
            const nextWeek = new Date(now.getTime() + 7 * 24 * 60 * 60 * 1000);
            
            document.getElementById('Input_StartDate').value = tomorrow.toISOString().slice(0, 16);
            document.getElementById('Input_EndDate').value = nextWeek.toISOString().slice(0, 16);
        });
    </script>
}